{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["DOM", "ES2022", "ES6"],
		"module": "CommonJS",
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.test.ts", "__tests__", "node_modules"]
}
